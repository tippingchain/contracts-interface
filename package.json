{
  "name": "@tippingchain/contracts-interface",
  "version": "1.2.0",
  "description": "Public contract interfaces and ABIs for TippingChain",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "author": "TippingChain Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tippingchain/contracts-interface.git"
  },
  "homepage": "https://github.com/tippingchain/contracts-interface#readme",
  "bugs": {
    "url": "https://github.com/tippingchain/contracts-interface/issues"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run clean && npm run typecheck && npm run build",
    "clean": "rimraf dist",
    "prepack": "npm run build",
    "update:addresses": "node scripts/update-addresses.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "tippingchain",
    "abi",
    "contracts",
    "interface",
    "web3",
    "ethereum"
  ],
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "@types/node": "^20.0.0",
    "rimraf": "^5.0.0",
    "rollup": "^4.0.0",
    "rollup-plugin-dts": "^6.0.0",
    "typescript": "^5.0.0"
  }
}